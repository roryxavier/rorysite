pipeline {
    agent any
    tools { nodejs "nodejs" }
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/roryxavier/rorysite.git'
            }
        }
        stage('Build Website') {
            steps {
                // Build your Docker image
                script {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                // Build your Docker image
                script {
                    sh 'docker build -t rorysite-dev .'
                }
            }
        }

        stage('Run local docker') {
            steps {
                // Push to local server
                sh 'docker run --init -p 8080:80 rorysite-dev:latest'

            }
        }
    }
}
